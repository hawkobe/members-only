<h1>Herein Lie The Anonymous Posts</h1>

<div class="post-card">
  <h2>Member's Only Post</h2>
  <% @posts.each do |post| %>
    <h2><%= link_to "#{post.title}", post %></h2>
    <p> Penned By: 
      <% if user_signed_in? %>
        <%= post.user.name %>
      <% else %>
        Anonymous
      <% end %>
    </p>
  <% end %>
</div>

<%= render "shared/sign-up" %>