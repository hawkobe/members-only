<% if @post.errors.any? %>
  <h3><%= pluralize(@post.errors.count, "error") %> prevented this from posting:</h3>
  <% @post.errors.each do |error| %>
      <p><%= error.full_message %></p>
  <% end %>
<% end %>

<%= form_with model: @post do |form| %>
  <div class="post-title">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: 'border rounded'%>
  </div>
  <div class="post-body">
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>
  <div class="submit">
    <%= form.submit %>
  </div><br>
<% end %>

<%= render "/shared/sign-up" %>
